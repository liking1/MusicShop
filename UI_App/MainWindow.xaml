<Window x:Class="UI_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*"/>
        </Grid.ColumnDefinitions >
        <Grid>
            <StackPanel>
                <Button Click="Button_Click" Margin="50" Height="50" Content="Add Item"/>
                <Button Click="Button_Click_1" Margin="50" Height="50" Content="Show all Items"/>
                <Button Height="50" Margin="50" Content="Exit" Click="Button_Click_2"/>
            </StackPanel>
        </Grid>
        <Grid>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden" Navigated="Main_Navigated"/>
        </Grid>
    </Grid>
</Window>
